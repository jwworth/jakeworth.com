!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type' }
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %title= [content_for(:page_title), SITE_NAME].compact.join(' - ').html_safe
    = javascript_include_tag 'application'
    = stylesheet_link_tag 'application', media: 'all'
    %link(rel="shortcut icon" type="image/x-icon" href="/favicon.ico")
    %link(href='http://fonts.googleapis.com/css?family=Lato:700' rel='stylesheet' type='text/css')
    = csrf_meta_tags
    = yield :head

  %body
    %nav.navbar.navbar-default.navbar-static-top
      .container
        %p.navbar-text.navbar-right= link_to 'Email', 'mailto:jake@jakeworth.com'
        %p.navbar-text.navbar-right= link_to 'Twitter', 'http://twitter.com/jwworth', target: '_blank'
        %p.navbar-text.navbar-right= link_to 'Github', 'http://github.com/jwworth', target: '_blank'
        %p.navbar-text.navbar-right= link_to 'Projects', projects_path
        .navbar-brand= link_to SITE_NAME.upcase, root_path

  %main
    .container
      - if flash.present? && flash[:notice]
        .alert.alert-info(role="alert")= [flash[:notice]].flatten.join('; ').downcase.capitalize
      = yield

  .container
    %footer
      created by
      = link_to '@jwworth.', 'http://twitter.com/jwworth'
      = link_to ' source code.', 'http://github.com/jwworth/jakeworth.com'
      %br
      %br
      .btn-group(role="group")
        - if developer_signed_in?
          .btn.btn-default= link_to 'Logout', destroy_session_path
          .btn.btn-default= link_to '+', new_post_path
          .btn.btn-default= link_to '$', new_project_path
        - else
          .btn.btn-default= link_to 'Login', login_path
